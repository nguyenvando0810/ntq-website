@import '../main'

.site-content
  background $color_white
  padding-top 30px
  padding-bottom 100px

  .posts
    display: grid
    grid-gap: 30px
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr))
    grid-auto-rows: 20px;

    .post
      overflow: hidden
      grid-row-end: span 15
      border-radius: 3px
      box-shadow: 0 0 5px 1px #e1e1e1

      .content
        display: block
        line-height: 1.5em

        .feature-image

          img
            max-width: 100%

        .title
          padding: 20px 20px 0
          font-size: 18px
          font-weight: bold

        .publish-date
          padding: 0 20px 20px
          font-size: 12px
          color: $color_gray_dark

        .truncated
          padding: 0 20px 20px
