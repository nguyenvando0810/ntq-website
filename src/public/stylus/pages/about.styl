@import '../main'

.page-header
  background-image url('~img/bg/about.jpg')

.page-content
  background $color_white

  .section-introduction
    padding-top: 50px

    .heading
      display: grid
      grid-template-columns: min-content 1fr
      align-items: center
      font-size: 18px

      .ntq-info-icon
        width: 50px
        height: 41px
        background-repeat: no-repeat
        background-position: left center

        &.icon-who
          background-image url('~img/icons/anonymous_actor.png')

        &.icon-what
          background-image url('~img/icons/male.png')

        &.icon-why
          background-image url('~img/icons/globe_pin.png')


    .ntq-info-paragraph
      padding-top: 20px
      padding-bottom: 50px
      line-height: 1.5em

  .section-ntq-members
    padding-top: 50px
    display: none

    @media (min-width: 1440px)
      display: block

    .heading
      font-size: 40px

    .member-container
      display: grid
      grid-template-columns: repeat(5, 20%)


      .member
        position: relative
        height: 580px
        display: flex
        align-items: flex-end
        justify-content: center

        .member-picture
          vertical-align middle

        .biography
          transition opacity .2s
          opacity 0
          position absolute
          bottom 35px
          background color-fallback(rgba(0, 0, 0, .7))
          padding 15px
          border-radius 5px

          .name
            font-size 20px

          .position
            margin-top 5px

          .intro
            margin-top 25px
            line-height 18px
            font-size 14px

        &:hover
          .biography
            opacity 1

  .section-video
    background: $color_green
    color: $color_white
    padding-top: 100px
    padding-bottom: 50px

    .content
      display: grid
      grid-column-gap: 20px
      grid-row-gap: 20px
      grid-template-columns: 100%

      @media (min-width: 1024px)
        grid-template-columns: 1fr 567px

      .info
        .heading
          font-size: 40px

        .explain
          padding-top: 20px
          font-size: 18px
          line-height: 40px

      .video-container
        background: none

        .video
          height: 296px

        @media (min-width: 768px)
          background: url('~img/frames/frame_imac.png') no-repeat center center
          width: 567px
          height: 447px
          padding: 19px
          margin: 0 auto

  .section-goals
    padding-top: 100px
    padding-bottom: 50px

    .heading
      font-size: 40px

    .sub-heading
      font-size: 18px
      padding-top: 15px

    .goals
      margin-top 120px

      .goal-icon
        background $color_blue
        overflow hidden
        border-radius 50%
        background-repeat no-repeat
        background-position center center
        width 116px
        height 116px

        &.revenue
          background-image url('~img/icons/money_bag.png')

        &.human-resource
          background-image url('~img/icons/group.png')

      .goal-explain
        margin-left 135px

        .target-name
          margin-top 20px
          font-size 30px

        .target
          margin-top 10px
          font-size 40px

    .sub-goals
      margin-top 60px

      .heading
        margin-top 30px
        font-size 30px

      .items
        li
          margin-top 22px

          .fa
            line-height 22px

          p
            line-height 22px
            display block
            margin-left 25px

  .section-press-releases
    background $color_blue
    padding-top 90px
    padding-bottom 100px

    .heading
      font-size 42px

    .sub-heading
      font-size 20px
      margin-top 10px

    .description
      line-height 22px
      margin-top 60px

    .video-container
      background url('~img/frames/frame_macbook.png') no-repeat center center
      margin 100px auto 0
      width 626px
      height 369px
      padding 24px 81px

      .video
        height 290px
