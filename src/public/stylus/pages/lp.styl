@import '../main'

.icon-see-more
  padding-left: 10px

.section-landing
  color $color_white

  .landing-background
    position: relative

    .video-background
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      min-width: 100%
      min-height: 100%

  .landing-heading
    position: absolute
    top: 100px
    left: 0
    right: 0
    bottom: 20px
    text-align: center
    display: flex
    align-items: center

    .container
      flex-grow: 1

      .heading
        font-size: 50px
        line-height: 1.1em

      .sub-heading
        font-size: 30px
        line-height: 1.1em
        padding-top: 20px

.section-whois
  background $color_white
  color: $color_black
  padding-top: 100px
  padding-bottom: 50px

  .content
    display: grid
    grid-column-gap: 20px
    grid-row-gap: 20px
    grid-template-columns: 1fr

    .description
      text-align: center

      .heading
        font-size: 40px
        text-transform: uppercase

      .paragraph
        margin-top: 25px
        line-height: 24px

      .about-us
        margin-top: 20px

        a
          display: inline-block
          border-radius: 3px
          background: $color_green
          padding: 0 22px
          line-height: 45px
          font-family: 'Raleway'
          font-weight: bold

    .video-container
      display: none
      flex-shrink: 0

      .video
        background url('~img/frames/frame_imac.png') no-repeat center center
        margin: 0 auto
        width: 567px
        height: 447px
        padding: 19px

  @media (min-width: 610px)
    .content
      .video-container
        display: block

  @media (min-width: 1100px)
    .content
      grid-template-columns: 1fr 567px

      .description
        text-align: left

.section-domains
  background $color_blue
  color: $color_white
  padding-top: 100px
  padding-bottom: 50px

  .content
    .heading
      font-size 42px

    .sub-heading
      font-size 18px
      margin-top 20px

    .services
      padding-top: 50px
      display: grid
      grid-column-gap: 20px
      grid-row-gap: 50px
      grid-template-columns: 1fr

      .service
        .service-heading
          font-size 18px
          margin-top 30px

        .service-description
          margin-top 20px
          line-height 24px

        .service-learn-more
          margin-top 18px

    .domains
      padding-top: 50px
      display: grid
      grid-column-gap: 20px
      grid-row-gap: 50px
      grid-template-columns: 1fr

      .domain
        text-align: center

        .logo-description
          padding: 20px 10px 0

    .logo
      margin: 0 auto
      max-width: 140px
      border-radius: 50%
      overflow: hidden
      border: 1px solid $color_white
      background: $color_blue_light
      position: relative

      &.small
        max-width: 80px

      .placeholder
        padding-top: 100%

      .img
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        display: flex
        justify-content: center
        align-items: center

    @media (min-width: 425px)
      .domains
        grid-template-columns: repeat(2, 1fr)

    @media (min-width: 768px)
      .services
        grid-template-columns: repeat(3, 1fr)

        .service
          flex-grow: 1
          flex-basis: 0

      .domains
        grid-template-columns: repeat(4, 1fr)

.section-reviews
  background $color_green
  color: $color_white
  padding-top: 100px
  padding-bottom: 50px

  .heading
    font-size 40px

  .reviews
    padding-top: 50px
    display: grid
    grid-column-gap: 20px
    grid-row-gap: 50px
    grid-template-columns: 1fr

    .review
      text-align: center

      .customer-pic
        margin: 0 auto
        max-width: 140px
        border-radius: 50%
        overflow: hidden
        border: 1px solid $color_white
        background: $color_blue_light
        position: relative

        .placeholder
          padding-top: 100%

        .img
          position: absolute
          top: 0
          left: 0
          right: 0
          bottom: 0
          display: flex
          justify-content: center
          align-items: center

      .customer-name
        padding-top: 20px
        font-size: 20px
        line-height: 1.2em

      .customer-position
        font-size: 18px

      .customer-review
        padding-top: 10px
        line-height: 22px

  @media (min-width: 768px)
    .reviews
       grid-template-columns: repeat(2, 1fr)

.section-tech
  background $color_blue
  color: $color_white
  padding-top: 100px
  padding-bottom: 50px

  .heading
    font-size 40px

  .sub-heading
    font-size 18px
    margin-top 20px

  .description
    margin-top 25px

  .technologies
    padding-top: 50px
    display: grid
    grid-column-gap: 20px
    grid-row-gap: 20px
    grid-template-columns: repeat(2, 1fr)

    .tech
      position: relative
      background $color_white
      overflow: hidden

      .placeholder
        padding-top: 50%

      .img
        position: absolute
        top: 5px
        left: 5px
        right: 5px
        bottom: 5px
        display: flex
        justify-content: center
        align-items: center

        img
          max-width: 100%
          max-height: 100%

  @media (min-width: 768px)
    .technologies
      grid-template-columns: repeat(5, 1fr)

  .see-more-tech
    padding-top 50px

    a
      border-radius 3px
      display inline-block
      background $color_white
      padding 0 22px
      line-height 45px
      font-family 'Raleway'
      font-weight bold

.section-why-ntq
  background $color_white

  .image-container
    height 565px
    // background url('../img/frames/frame_iphone.png') no-repeat center center

    img
      vertical-align middle
      max-width 100%

  .heading
    font-size 42px

  .reason
    &.first-reason
      margin-top 62px

    &.first-reason
    &.second-reason
      padding-bottom 36px

    &.second-reason
    &.third-reason
      margin-top 38px

    .reason-heading
      font-size 18px
      line-height 24px

    .reason-explain
      line-height 24px

  .reason-break
    width 225px
    border-bottom 1px solid $color_gray_light

.section-partners
  background $color_blue

  .site-container
    height 100%
    padding-top 78px
    position relative

    .heading
      font-size 42px

    .sub-heading
      margin-top 20px
      font-size 18px

    .partner-map
      position absolute
      top 180px
      bottom 50px
      left 0
      right 0
      background-image: url('~img/partner_map_jp.png')
      background-repeat no-repeat
      background-position center center
      background-size contain

.en .section-partners .site-container .partner-map
  background-image: url('~img/partner_map_en.png')

.section-rd
  background $color_green

  .heading
    font-size 42px

  .description
    font-size 20px
    margin-top 25px
    line-height 24px

  .rd-film
    margin-top 112px
    padding-top 38px
    padding-bottom 42px
    background url('~img/frames/frame_film.png') repeat-x center center

    .rd-block
      border-radius 8px
      overflow hidden
      background $color_green

      .thumb
        height 130px
        text-align center
        margin-left -999px
        margin-right -999px

        img
          vertical-align middle
          height 100%

  .rd-how-it-work
    margin-top 52px

    a
      display inline-block
      line-height 45px
      padding 0 22px
      border-radius 3px
      background $color_white
      font-family 'Raleway'
      font-weight bold

.section-articles
  background-color: $color_black

  .article
    position relative
    width 33.33%
    height 50%
    overflow hidden
    background-size cover
    background-position center center
    background-repeat no-repeat

    .article-overlay
      position absolute
      left 0
      right 0
      bottom 0
      top 0
      opacity 0
      transition opacity .2s

      &.background
        background $color_black
        z-index 0

      &.info
        padding 100px 20px 0
        font-size 20px
        z-index 1

        .article-heading
          font-size 20px

        .article-brief
          font-size 16px
          margin-top 25px
          line-height 24px

        .article-readmore
          font-size 16px
          margin-top 25px

          a
            display inline-block
            border 1px solid $color_white
            padding 0 16px
            line-height 38px

    &:hover
      .article-overlay
        &.background
          opacity .4

        &.info
          opacity 1

.section-offer
  background $color_blue
  padding 92px 70px 82px

  .offer
  .offer-explain
    font-size 30px
    line-height 42px

  .offer-explain
    margin-top 41px

  .contact-us
    margin-top 64px

    a
      display inline-block
      border-radius 3px
      background $color_white
      font-family 'Raleway'
      font-weight bold
      padding 0 22px
      line-height 70px
      font-size 30px

  .download-materials
    margin-top 20px
    font-size 25px
