.site-header
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: $zindex_topmost
  background: transparent
  color: $color_white
  border-bottom: 1px solid transparent

  .nav-link
    cursor: pointer

    &:hover
      color: $color_blue

  &.float
    background: $color_white
    color: $color_black
    border-bottom: 1px solid $color_gray

  .content
    display: flex
    align-items: center

    .company-logo
      flex-grow: 0
      flex-shrink: 0
      padding: 20px 0

    .top-nav
      flex-grow: 1
      text-align: right
      padding-left: 10px
      white-space: nowrap
      flex-shrink: 1
      overflow: hidden

      .top-menu
        display: none

        @media (min-width: 1200px)
          display: block

      .nav-item
        display: inline-block
        position: relative
        line-height: 32px
        border: 1px solid transparent

        .nav-link
          padding: 0 20px
          display: block

        .checkbox
          display: none

        .dropdown
          position: fixed
          top: 70px
          display: none
          border-radius: 8px
          border: 1px solid $color_gray_light
          background-color: $color_white
          color: $color_black
          padding: 0 20px
          text-align: left

          .dropdown-item
            padding: 10px 0

            &:not(:last-child)
              border-bottom: 1px solid $color_gray_light

        .checkbox:checked + .dropdown
          display: block

        &.contact
          border: 1px solid $color_gray_light
          border-radius: 4px
          background: $color_blue
          color: $color_white

          &:hover
            background: $color_blue_light
            color: $color_white

    .top-actions
      flex-grow: 0
      flex-shrink: 0
      white-space: nowrap
      font-size: 0

      .language-switch
      .menu
        text-align: center
        display: inline-block
        display: inline-flex
        size: 34px
        line-height: 34px
        margin-left: 10px
        align-items: center
        justify-content: center

      .language-switch
        background: $color_white
        border-radius 4px
        border 1px solid $color_gray_light
        overflow: hidden
        background-position: center center
        background-repeat: no-repeat

        &.ja
          background-image url('~img/flags/ja.png')

        &.en
          background-image: url('~img/flags/en.png')

      .menu
        font-size: 24px
        text-align: center
        vertical-align: top
        cursor: pointer

        .checkbox
          display: none

        .menu-overlay
          position: fixed
          top: 0
          right: 0
          bottom: 0
          left: 0
          background: rgba(0, 0, 0, .6)
          display: none

          .menu-content
            position: fixed
            top: 90px
            left: 10px
            right: 10px
            background-color: $color_white
            background-image: url('~img/bg/menu-corner.png')
            background-position: left bottom
            background-size: contain
            background-repeat: no-repeat
            border-radius: 8px
            border 1px solid $color_gray_light
            padding: 20px
            overflow-x: hidden
            overflow-y: auto
            display: flex
            justify-content: center

            .nav-menu
              display: grid
              grid-row-gap: 10px
              font-size: 20px

              .nav-item
                padding: 0 20px
                background-color: rgba(255, 255, 255, .8)
                color: $color_black
                border-radius: 4px

        .checkbox:checked + .menu-overlay
          display: block

      @media (min-width: 1200px)
        .menu
          display: none
