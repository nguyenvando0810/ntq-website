_SUPPORTED_GRID_SYSTEMS = 12 16
_COL_WIDTH = 78px
_GUTTER = 20px

_grid_system(__TYPE, __TOTAL_COLS, __COL_WIDTH = null, __GUTTER = null)
	gs(__TYPE, __TOTAL_COLS, __COL_WIDTH, __GUTTER)

	.row
		clearfix()
		row()

		for __SIZE in (1..(__TOTAL_COLS - 1))
			.col-{__SIZE}
				col(__SIZE)

			for __OFFSET in (1..(__TOTAL_COLS - __SIZE))
				.col-{__SIZE}-offset-{__OFFSET}
					col(__SIZE)
					offset(__OFFSET)

		.col
			col()

for __GRID_SYSTEM in _SUPPORTED_GRID_SYSTEMS
	.gs-{__GRID_SYSTEM}
		_grid_system('fixed', __GRID_SYSTEM, _COL_WIDTH, _GUTTER)

		&.gs-fluid
			_grid_system('fluid', __GRID_SYSTEM)
