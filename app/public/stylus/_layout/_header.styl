$_border_width = 1px
$_line_height = $layout_header_h - $_border_width

.site-header
	position fixed
	top 0
	left 0
	right 0
	height $layout_header_h
	z-index $zindex_topmost
	background $color_white
	border-bottom $_border_width solid $color_gray

	.company-logo
		line-height $_line_height
		background $color_white
		width 100px

		img
			vertical-align middle

	.top-actions
		text-align right
		width 140px
		background $color_white
		line-height $_line_height

		.language-switch
			display block
			border-radius 3px
			border 1px solid $color_gray_light
			margin-left 15px
			size 34px
			margin-top (($layout_header_h - 34px) / 2)

			&.ja
				background url('../img/flags/japan.png') no-repeat center center

		.contact
			display block
			height 34px
			line-height 34px
			border-radius 3px
			background $color_blue
			color $color_white
			margin-top (($layout_header_h - 34px) / 2)
			padding 0 12px
			margin-left 10px
			transition background .2s

			&:hover
				background $color_blue_light

	.top-nav
		height $_line_height
		white-space nowrap
		overflow-x hidden
		text-align right
		margin-left 100px
		margin-right 140px
		background $color_white

		.nav-item
			display inline-block

			a
				display block
				line-height $_line_height
				padding 0 20px
				font-weight bold
				transition color .2s

				&:hover
					color $color_blue
