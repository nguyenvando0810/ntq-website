					<img src="<%= @__assets.img('/domains_healthcare.png') %>" alt="<%- healthCare %>" width="31" height="32">
				</div>
				<div class="domain-description">
					<div class="section-sub-heading">
						<span><%- healthCare %></span>
					</div>
				</div>
			</div>
		</div>
		<div class="row domains">
			<div class="col-3">
				<% systemIntergration = @__('page-home.page-services.domains.box5.title.text1') %>
				<div class="domain-logo pull-left bg-blue-light text-center">
					<img src="<%= @__assets.img('/domains_integration.png') %>" alt="<%- systemIntergration %>" width="35" height="35">
				</div>
				<div class="domain-description">
					<div class="section-sub-heading">
						<span><%- systemIntergration %></span>
					</div>
				</div>
			</div>
			<div class="col-3">
				<% enterprise = @__('page-home.page-services.domains.box6.title.text1') %>
				<div class="domain-logo pull-left bg-blue-light text-center">
					<img src="<%= @__assets.img('/domains_enterprise.png') %>" alt="<%- enterprise %>" width="38" height="38">
				</div>
				<div class="domain-description">
					<div class="section-sub-heading">
						<span><%- enterprise %></span>
					</div>
				</div>
			</div>
			<div class="col-3">
				<% cloudBased = @__('page-home.page-services.domains.box7.title.text1') %>
