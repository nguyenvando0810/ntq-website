<script id="home-navigator" type="text/ractive">
	<div class="view-navigator">
		{{#each sections}}
		<div class="view-section{{index == selected ? ' selected' : ''}}" on-click="select(this)">
			<div class="view-section-title">{{title}}</div>
		</div>
		{{/each}}
	</div>
</script>
<script src="<%= @__assets.lib('/lodash/lodash.min.js') %>"></script>
