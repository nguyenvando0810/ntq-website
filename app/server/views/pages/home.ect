<% block 'page_full': %>

<div class="page-section section-landing" data-title="NTQ Solution">
	<div class="landing-background full-height">
		<video autoplay loop muted class="video-background vertical-middle">
			<source src="<%= @__assets.video('/bg_home.mp4') %>" type="video/mp4">
		</video>
	</div>
	<div class="landing-mark">
	</div>
	<div class="landing-overlay">
		<div class="heading text-upper">
			<div>Delivering</div>
			<div>Next Top Quality</div>
		</div>
		<div class="sub-heading">
			<span>Viet Nam Software Outsourcing Company</span>
		</div>
	</div>
</div>

<div class="page-section section-whois" data-title="Who is NTQ Solution?">
	<div class="site-container fluid vertical-middle">
		<div class="gs">
			<div class="row">
				<div class="col-5">
