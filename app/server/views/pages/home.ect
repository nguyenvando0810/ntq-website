<% block 'title' : %>
NTQ Solution
<% end %>

<div class="section section-landing bg-white">
	<div class="landing-background">

	</div>
	<div class="landing-overlay">
		<div class="landing-logo text-center">
			<img src="<%= @__assets.img('/logo/logo_l.png') %>" alt="">
		</div>
	</div>
</div>
<div class="section section-about bg-white">
	<div class="gs-12">
		<div class="row">
			<div class="col-5">
				<div class="section-heading">
					<span class="text-green">who</span>
					<span>is NTQ Solution?</span>
				</div>
				<div class="paragraph text-justify">
					<span>NTQ Solution is a Vietnamese software development company providing offshore development services such as mobile and web applications as well as other essential software services for businesses.</span>
				</div>
			</div>
			<div class="col-6-offset-1">
				<div class="video-container">
				</div>
			</div>
		</div>
	</div>
</div>
