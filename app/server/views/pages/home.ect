					<img src="<%= @__assets.img('/domains_cloud.png') %>" alt="<%- cloudBased %>" width="44" height="34">
				</div>
				<div class="domain-description">
					<div class="section-sub-heading">
						<span><%- cloudBased %></span>
					</div>
				</div>
			</div>
			<div class="col-3">
				<% ecommence = @__('page-home.page-services.domains.box8.title.text1') %>
