					<div class="col">
						<div class="logo-container pull-left">
							<img src="<%= @__assets.img('/logo_s.png') %>" alt="NTQ Solution">
						</div>
						<div class="language-switch pull-right">
						</div>
						<nav class="top-nav pull-right">
							<ul class="text-bold cf">
								<li>
									<a href="#"><%= @__('menu.business') %></a>
								</li>
								<li>
									<a href="<%= @_url('success-stories') %>"><%= @__('menu.success-story') %></a>
								</li>
								<li>
