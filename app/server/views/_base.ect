						<div class="col-3 paragraph">
							<div class="contact-address">
								<span><%- @__('common.address.hanoi.title') %>:</span><br>
								<span><%- @__('common.address.hanoi.address') %></span>
							</div>
							<div class="contact-person">
								<span><%- @__('common.address.hanoi.name') %></span><br>
								<span><%- @__('common.address.hanoi.position') %></span><br>
								<span><%- @__('common.address.hanoi.tel') %>:</span><br>
								<span><%- @__('common.address.hanoi.email') %>:</span><br>
							</div>
						</div>
						<div class="col-3 paragraph">
							<div class="contact-address">
								<span><%- @__('common.address.japan.title') %>:</span><br>
								<span><%- @__('common.address.japan.address') %></span>
							</div>
							<div class="contact-person">
								<span><%- @__('common.address.japan.name') %></span><br>
								<span><%- @__('common.address.japan.position') %></span><br>
								<span><%- @__('common.address.japan.tel') %>:</span><br>
